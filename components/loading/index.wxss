/* components/loading/index.wxss */

.loading:before {
  content: '';
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
}

.loading:after {
  position: absolute;
  z-index: 2;
  top: 50%;
  left: 50%;
  margin-left: -18rpx;
  content: '';
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
  background-image: url(http://yanxuan.nosdn.127.net/6760e77ff556ac21b171128e9ed150db.png);
  background-repeat: no-repeat;
  background-size: 100%;
  animation: refresh-spin-rotate linear infinite 1s;
}